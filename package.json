{
  "name": "simple-react-drawer",
  "version": "1.0.1-pre",
  "description": "A simple UI drawer for React apps",
  "homepage": "https://abiola-ajibola.github.io/simple-react-drawer",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
